<?xml version="1.0" ?>
<configuration>
	<type>IssuesectAlarmPoint</type>
	<!-- 组件打开时通知页面 -->
	<widgetrunnotify></widgetrunnotify>
	<!-- 组件关闭时通知页面 -->
	<widgetclosenotify></widgetclosenotify>
	
	<needzoom>true</needzoom>
	<zoomscale>48000</zoomscale>
	
	<initvisible>true</initvisible>
	
	
	<popupskinclass>MultiLayer</popupskinclass>
	
	<popup>
		<title>{issuesectName}</title>
		<fields>
			<field name="issuesectName"/>
			<field name="alarmTime" alias="预警时间: " visible="true"/>
			<field name="updateTime" alias="更新时间: " visible="true"/>
			<field name="trendType" alias="趋势类型: " visible="true"/>
			<field name="speed" alias="行程车速: " visible="true"/>
			<field name="volume" alias="2分钟流量: " visible="true"/>
			<field name="standardSpeed" alias="速度因子: " visible="true"/>
			<field name="standardVolume" alias="流量因子: " visible="true"/>
		</fields>
		<showzoomtobutton>false</showzoomtobutton>
<!-- 		<buttons> -->
<!-- 			<button label="视频" action="openDevice" type="QingSaoCheVideo"/> -->
<!-- 		</buttons> -->
	</popup>
	
	<simplerenderer>
		<picturemarkersymbol url="assets/images/i_target.png"/>
	</simplerenderer>
	
	<clickfunction>
		<action>showInfoWindow</action>
	</clickfunction>
</configuration>
