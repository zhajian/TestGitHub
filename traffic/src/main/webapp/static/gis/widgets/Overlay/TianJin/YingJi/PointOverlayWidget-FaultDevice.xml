<?xml version="1.0" ?>
<!-- 病害设施 -->
<configuration>
	<type>FaultDevice</type>
	<!-- 组件打开时通知页面 -->
	<widgetrunnotify></widgetrunnotify>
	<!-- 组件关闭时通知页面 -->
	<widgetclosenotify></widgetclosenotify>
	
	<needzoom>true</needzoom>
	<zoomscale>48000</zoomscale>
	
	<initvisible>false</initvisible>
	
	
	<popupskinclass></popupskinclass>
	
	<popup>
		<title>{sheshiMingcheng}</title>
		<fields>
			<field name="sheshiMingcheng"/>
			<field name="sheshiBianhao" alias="设施编号: " visible="true"/>
			<field name="sheshiLeixing" alias="设施类型: " visible="true"/>
			<field name="luxian" alias="所在路线: " visible="true"/>
			<field name="luduan" alias="所在路段: " visible="true"/>
			<field name="zhuanghao" alias="桩号: " visible="true"/>
			<field name="binghaiXingxi" alias="病害信息: " visible="true"/>
		</fields>
		<showzoomtobutton>false</showzoomtobutton>
<!-- 		<buttons> -->
<!-- 			<button label="视频" action="openDevice" type="QingSaoCheVideo"/> -->
<!-- 		</buttons> -->
	</popup>
	
	<simplerenderer>
		<picturemarkersymbol url="assets/images/mapIcons/FaultDevice.png"/>
	</simplerenderer>
	
	<clickfunction>
		<action>showInfoWindow</action>
	</clickfunction>
</configuration>
