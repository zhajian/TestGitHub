<?xml version="1.0" ?>
<configuration>
	<type>road-event</type>
	<!-- 组件打开时通知页面 -->
	<widgetrunnotify>onRoadEventOverlayRun</widgetrunnotify>
	<!-- 组件关闭时通知页面 -->
	<widgetclosenotify>onRoadEventOverlayClose</widgetclosenotify>
	<popup>
		<title>{name}</title>
		<fields>
			<field name="name" visible="false"/>
			<field name="desc" alias="描述" visible="true"/>
		</fields>
		<showzoomtobutton>false</showzoomtobutton>
		<buttons>
			<button label="详情" action="openDevice" type="roadEvent" />
		</buttons>
	</popup>
	<simplerenderer>
		<picturemarkersymbol url="assets/images/mapIcons/TianJin/ShiJian.png" yoffset="13" />
	</simplerenderer>
</configuration>
