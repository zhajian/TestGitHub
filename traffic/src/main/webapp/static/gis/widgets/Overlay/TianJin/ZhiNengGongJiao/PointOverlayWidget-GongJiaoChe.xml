<?xml version="1.0" ?>
<configuration>
	<type>publicbus-currpos</type>
	<!-- 组件打开时通知页面 -->
	<widgetrunnotify>onpublicbusOverlayRun</widgetrunnotify>
	<!-- 组件关闭时通知页面 -->
	<widgetclosenotify>onpublicbusOverlayClose</widgetclosenotify>
	<popup>
		<title>{name}</title>
		<fields>
			<field name="name"/>
			<field name="desc" alias="描述" visible="true"/>
			<field name="time" alias="时间" visible="true"/>
		</fields>
		<showzoomtobutton>false</showzoomtobutton>
		<buttons>
			<button label="详情" action="openDevice" type="publicbus-currpos" />
			<button label="视频" action="openDevice" type="publicbus-currpos-video" />
		</buttons>
	</popup>
	
	<uniquevaluerenderer field="name">
		<picturemarkersymbol url="assets/images/mapIcons/TianJin/GongJiao/GongJiaoChe_current.png" 
							 yoffset="21" />
							 
		<uniquevalueinfo value="生态城公交1号线">
			<picturemarkersymbol url="assets/images/mapIcons/TianJin/GongJiao/GongJiaoChe_current.png" 
							 	 yoffset="21" />
		</uniquevalueinfo>
							 
		<uniquevalueinfo value="生态城公交2号线">
			<picturemarkersymbol url="assets/images/mapIcons/TianJin/GongJiao/GongJiaoChe_current.png" 
							 	 yoffset="21" />
		</uniquevalueinfo>
							 
		<uniquevalueinfo value="生态城公交3号线">
			<picturemarkersymbol url="assets/images/mapIcons/TianJin/GongJiao/GongJiaoChe_current.png" 
							 	 yoffset="21" />
		</uniquevalueinfo>
							 
		<uniquevalueinfo value="生态城公交4号线">
			<picturemarkersymbol url="assets/images/mapIcons/TianJin/GongJiao/GongJiaoChe_current.png" 
							 	 yoffset="21" />
		</uniquevalueinfo>
	</uniquevaluerenderer>
	
