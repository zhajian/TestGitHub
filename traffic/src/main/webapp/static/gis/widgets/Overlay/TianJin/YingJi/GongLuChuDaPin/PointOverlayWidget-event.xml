<?xml version="1.0" ?>
<configuration>
	<type>event</type>
	<!-- 组件打开时通知页面 -->
	<widgetrunnotify></widgetrunnotify>
	<!-- 组件关闭时通知页面 -->
	<widgetclosenotify></widgetclosenotify>
	
	<ismercator>true</ismercator>
	
	<needzoom>false</needzoom>
	
	<initvisible>false</initvisible>
	
	<popupskinclass>天津大屏路况</popupskinclass>
	
	<popup>
		<fields>
			<field name="eventId"/>
			<field name="source"/>
			<field name="roadNo"/>
			<field name="roadName"/>
			<field name="beginPosKilo"/>
			<field name="beginPosHundred"/>
			<field name="endPosKilo"/>
			<field name="endPosHundred"/>
			<field name="plateNumber"/>
			<field name="reportDept"/>
			<field name="reportName"/>
			<field name="reportPerson"/>
			<field name="reportTime"/>
			<field name="mainClass"/>
			<field name="subClass"/>
			<field name="eventDesc"/>
			<field name="pic"/>
			<field name="maxDealTime"/>
			<field name="startDealTime"/>
			<field name="endDealTime"/>
			<field name="state"/>
		</fields>
		<showzoomtobutton>false</showzoomtobutton>
<!-- 		<buttons> -->
<!-- 			<button label="视频" action="openDevice" type="QingSaoCheVideo"/> -->
<!-- 		</buttons> -->
	</popup>
	
	<simplerenderer>
		<picturemarkersymbol url="assets/images/mapIcons/WuHu/YingJiShiJian-blue.png" yoffset="18"/>
	</simplerenderer>
	
	<clickfunction>
		<action>showInfoWindow</action>
	</clickfunction>
</configuration>
