<!-- 应急设施 -->
<?xml version="1.0" ?>
<configuration>
	<type>YingJiSheShi</type>
	<!-- 组件打开时通知页面 -->
	<widgetrunnotify></widgetrunnotify>
	<!-- 组件关闭时通知页面 -->
	<widgetclosenotify></widgetclosenotify>
	
	<initvisible>false</initvisible>
	
	<popupskinclass>advanced</popupskinclass>
	<popup>
		<title>{brief}</title>
		<fields>
			<field name="brief"/>
			<field name="facType" alias="设施类型：" visible="true"/>
			<field name="facName" alias="设施名称：" visible="true"/>
			<field name="contactWay" alias="联系方式：" visible="true"/>
			<field name="contactNumber" alias="联络号码：" visible="true"/>
		</fields>
		<showzoomtobutton>false</showzoomtobutton>
<!-- 		<buttons> -->
<!-- 			<button label="拨号" action="openDevice" type="callPoliceCarPDA"/> -->
<!-- 		</buttons> -->
	</popup>
	
	<simplerenderer>
		<picturemarkersymbol url="assets/images/mapIcons/WuHu/YingJiSheShi-blue.png" yoffset="18" />
	</simplerenderer>
	
	<clickfunction>
		<action>showInfoWindow</action>
	</clickfunction>
</configuration>
