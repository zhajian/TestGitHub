<?xml version="1.0" ?>
<configuration>
	<type>policeEvent</type>
	<!-- 组件打开时通知页面 -->
	<widgetrunnotify>onPoliceEventOverlayRun</widgetrunnotify>
	<!-- 组件关闭时通知页面 -->
	<widgetclosenotify>onPoliceEventOverlayClose</widgetclosenotify>
	
	<popup>
		<title>{fdtTime}</title>
		<fields>
			<field name="fdtTime" alias="报警时间" visible="false" />
			<field name="caseLocation" alias="案发地址" visible="true" />
			<field name="caseContent" alias="主要情节" visible="true" />
			<field name="caseLevel" alias="警情等级" visible="false" />
			<field name="caseType" alias="警情类型" visible="false" />
		</fields>
		<showzoomtobutton>false</showzoomtobutton>
	</popup>
	
	<simplerenderer>
		<picturemarkersymbol url="assets/images/mapIcons/JingQing-blue.png" yoffset="13"/>
	</simplerenderer>
</configuration>
