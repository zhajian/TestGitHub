<!-- 应急事件-联动单位 -->
<?xml version="1.0" ?>
<configuration>
	<type>LianDongDanWei</type>
	<!-- 组件打开时通知页面 -->
	<widgetrunnotify></widgetrunnotify>
	<!-- 组件关闭时通知页面 -->
	<widgetclosenotify></widgetclosenotify>
	
	<initvisible>false</initvisible>
	
	<popup>
		<title>{brief}</title>
		<fields>
			<field name="brief"/>
			<field name="deptType" alias="类型：" visible="true"/>
			<field name="deptName" alias="名称：" visible="true"/>
			<field name="contactWay" alias="联系方式：" visible="true"/>
			<field name="contactNumber" alias="联系号码：" visible="true"/>
		</fields>
		<showzoomtobutton>false</showzoomtobutton>
<!-- 		<buttons> -->
<!-- 			<button label="流量统计" action="openDevice" type="CheJianQiLiuLiangTongJi"/> -->
<!-- 		</buttons> -->
	</popup>
	
	<simplerenderer>
		<picturemarkersymbol url="assets/images/mapIcons/WuHu/GangDian-blue.png" yoffset="18"/>
	</simplerenderer>
	
	<clickfunction>
		<action>showInfoWindow</action>
	</clickfunction>
</configuration>
