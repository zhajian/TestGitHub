<?xml version="1.0" ?>
<!-- 施工 -->
<configuration>
	<type>shigong</type>
	<!-- 组件打开时通知页面 -->
	<widgetrunnotify></widgetrunnotify>
	<!-- 组件关闭时通知页面 -->
	<widgetclosenotify></widgetclosenotify>
	
	<needzoom>true</needzoom>
	<zoomscale>48000</zoomscale>
	
	<initvisible>true</initvisible>
	
	
	<popupskinclass>MultiLayer</popupskinclass>
	
	<popup>
		<title>{renwuBiaoti}</title>
		<fields>
			<field name="renwuLeixingMingcheng" alias="任务类型: " visible="true"/>
			<field name="jihuaShijian" alias="计划时间: " visible="true"/>
			<field name="luxianMingcheng" alias="路线名称: " visible="true"/>
			<field name="luduanMingcheng" alias="路段名称: " visible="true"/>
			<field name="zhixingJihuaKaishiShiajian" alias="计划开始时间: " visible="true"/>
			<field name="zhixingYujiJieshuShijian" alias="预计结束时间: " visible="true"/>
			<field name="renwuShuoming" alias="任务说明: " visible="true"/>
		</fields>
		<showzoomtobutton>false</showzoomtobutton>
	</popup>
	
	<simplerenderer>
		<picturemarkersymbol url="assets/images/mapIcons/WuHu/ZhanDaoShiGong-blue.png" yoffset="18"/>
	</simplerenderer>
	
	<clickfunction>
		<action>showInfoWindow</action>
	</clickfunction>
</configuration>