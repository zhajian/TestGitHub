<?xml version="1.0" ?>
<configuration>
	<type>car</type>
	<!-- 组件打开时通知页面 -->
	<widgetrunnotify>onCarOverlayRun</widgetrunnotify>
	<!-- 组件关闭时通知页面 -->
	<widgetclosenotify>onCarOverlayClose</widgetclosenotify>
	<popup>
		<title>{carNo}</title>
		<fields>
			<field name="carNo" alias="车牌号" visible="true"/>
			<field name="type"  alias="车类型" visible="true" />
			<field name="brand" alias="车种类" visible="true"/>
			<field name="orgName" alias="车公司" visible="true"/>
			<field name="time" alias="更新时间" visible="true"/>		
		</fields>
		<showzoomtobutton>false</showzoomtobutton>
	</popup>
	
	<clickfunction>
		<action>showInfoWindow</action>
	</clickfunction>
	
	<simplerenderer>
		<picturemarkersymbol url="assets/images/mapIcons/JingChe-blue.png" height="26" width="22" yoffset="13"/>
	</simplerenderer>
</configuration>