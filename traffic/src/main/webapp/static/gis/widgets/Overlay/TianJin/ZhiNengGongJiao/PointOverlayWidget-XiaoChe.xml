<?xml version="1.0" ?>
<configuration>
	<type>schoolbus-currpos</type>
	<!-- 组件打开时通知页面 -->
	<widgetrunnotify>onpublicbusOverlayRun</widgetrunnotify>
	<!-- 组件关闭时通知页面 -->
	<widgetclosenotify>onpublicbusOverlayClose</widgetclosenotify>
	<popup>
		<title>{name}</title>
		<fields>
			<field name="name" visible="false"/>
			<field name="desc" alias="描述" visible="true"/>
			<field name="time" alias="时间" visible="true"/>
		</fields>
		<showzoomtobutton>false</showzoomtobutton>
		<buttons>
			<button label="详情" action="openDevice" type="schoolbus-currpos" />
			<button label="视频" action="openDevice" type="schoolbus-currpos-video" />
			<button label="轨迹" action="openDevice" type="schoolbus-currpos-track" />
			<button label="回放" action="openDevice" type="schoolbus-currpos-playback" />
		</buttons>
	</popup>
	<simplerenderer>
		<picturemarkersymbol url="assets/images/mapIcons/TianJin/XiaoChe/XiaoChe_current.png" yoffset="21" />
	</simplerenderer>
</configuration>
