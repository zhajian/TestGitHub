<?xml version="1.0" ?>
<!-- 岗点 -->
<configuration>
	<type>policeSentry</type>
	<!-- 组件打开时通知页面 -->
	<widgetrunnotify>onPoliceSentryOverlayRun</widgetrunnotify>
    <!-- 组件关闭时通知页面 -->
    <widgetclosenotify>onPoliceSentryOverlayClose</widgetclosenotify>
    <popup>
        <title>{spotName}</title>
        <fields>
            <field name="spotName" alias="岗点名称" visible="true" />
            <field name="spotType" alias="岗点类型" visible="true" />
            <field name="distance" alias="坐标半径"/>
            <field name="deptName" alias="所属部门" visible="true" />
        </fields>
        <showzoomtobutton>false</showzoomtobutton>
    </popup>
	<simplerenderer>
		<picturemarkersymbol url="assets/images/mapIcons/GangDian-blue.png" yoffset="13" />
	</simplerenderer>
</configuration>
