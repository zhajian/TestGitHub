<?xml version="1.0" ?>
<configuration>
	<type>sjjc</type>
	<!-- 组件打开时通知页面 -->
	<widgetrunnotify>onSJJCOverlayRun</widgetrunnotify>
	<!-- 组件关闭时通知页面 -->
	<widgetclosenotify>onSJJCOverlayClose</widgetclosenotify>
	<popup>
		<title>{pos}</title>
		<fields>
			<field name="eventid" alias="事件编号" visible="false"/>
			<field name="deviceid" alias="设备编号" visible="true"/>
			<field name="pos" alias="描述" visible="false"/>
			<field name="region" alias="区域" visible="true"/>
			<field name="status" alias="状态" visible="true"/>
		</fields>
		<showzoomtobutton>false</showzoomtobutton>
		<buttons>
			<button label="视频" action="openDevice" type="EventVideo" idfield="eventid" />
		</buttons>
	</popup>
	<simplerenderer>
		<picturemarkersymbol url="assets/images/mapIcons/JingQing-red.png" yoffset="13"/>
	</simplerenderer>
</configuration>
