<?xml version="1.0" ?>
<configuration>
	<type>SheXiangJi</type>
	<!-- 组件打开时通知页面 -->
	<widgetrunnotify></widgetrunnotify>
	<!-- 组件关闭时通知页面 -->
	<widgetclosenotify></widgetclosenotify>
	<popup>
		<title>{name}</title>
		<fields>
			<field name="name" visible="false" />
			<field name="id" alias="编号" visible="true" />
		</fields>
		<showzoomtobutton>false</showzoomtobutton>
		<buttons>
			<button label="移动" action="moveGraphic" type="SheXiangJi" />
			<button label="删除" action="deleteGraphic" type="SheXiangJi"/>
		</buttons>
	</popup>
	<simplerenderer>
		<picturemarkersymbol url="assets/images/mapIcons/SheXiangJi-blue.png" yoffset="13"/>
	</simplerenderer>
	
</configuration>
