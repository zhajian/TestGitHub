<?xml version="1.0" ?>
<!-- 拥堵警情：按照PointOverlayWidget-sendPoliceEvent.xml文件进行类似配置 -->
<configuration>	
	<type>caseCch</type>
	<!-- 组件加载时通知页面 -->
	<widgetrunnotify>onCaseCchOverlayLoad</widgetrunnotify>
	<!-- 组件关闭时通知页面 -->
	<widgetclosenotify>onCaseCchOverlayClose</widgetclosenotify>
	<popup>
		<title>{caseId}</title>
		<fields>
			<field name="caseId" alias="警情编号" visible="true" />
			<field name="callPoliceTime" alias="报警时间" visible="true" />
			<field name="occurPlace" alias="案发地址" visible="true" />
			<field name="content" alias="案情" visible="true" />
		</fields>
		<showzoomtobutton>false</showzoomtobutton>
	</popup>
	<simplerenderer>
		<picturemarkersymbol url="assets/images/mapIcons/JingQing-blue.png" />
	</simplerenderer>	
</configuration>