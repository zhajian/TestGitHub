<?xml version="1.0" ?>
<!-- 信息发布 -->
<configuration>
	<type>InfoPublish</type>
	<!-- 组件打开时通知页面 -->
	<widgetrunnotify></widgetrunnotify>
	<!-- 组件关闭时通知页面 -->
	<widgetclosenotify></widgetclosenotify>
	
	<needzoom>true</needzoom>
	<zoomscale>48000</zoomscale>
	
	<initvisible>false</initvisible>
	
	
	<popupskinclass></popupskinclass>
	
	<popup>
		<title>{dept}</title>
		<fields>
			<field name="person" alias="发布人: " visible="true"/>
			<field name="dept" alias="发布单位: "/>
			<field name="time" alias="发布时间: " visible="true"/>
			<field name="content" alias="发布内容: " visible="true"/>
		</fields>
		<showzoomtobutton>false</showzoomtobutton>
<!-- 		<buttons> -->
<!-- 			<button label="视频" action="openDevice" type="QingSaoCheVideo"/> -->
<!-- 		</buttons> -->
	</popup>
	
	<simplerenderer>
		<picturemarkersymbol url="assets/images/mapIcons/GuangBo30.png" yoffset="15"/>
	</simplerenderer>
	
	<clickfunction>
		<action>showInfoWindow</action>
	</clickfunction>
</configuration>
